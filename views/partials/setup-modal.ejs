<!-- Working Directory Setup Modal -->
<div id="setup-modal" class="modal">
    <div class="modal-content">
        <h2>
            <span class="material-icons">folder_open</span>
            Set Working Directory
        </h2>
        <p>Please specify the absolute path to the directory you want to work with:</p>
        <form id="directory-form">
            <div class="input-container">
                <div class="input-inner">
                    <input type="text" id="directory-input" placeholder="/path/to/your/project" />
                </div>
            </div>
            <div class="modal-buttons">
                <button type="button" id="directory-cancel" class="cancel-button">Cancel</button>
                <button type="submit" id="directory-submit" class="confirm-button">Set Directory</button>
            </div>
        </form>
    </div>
</div>