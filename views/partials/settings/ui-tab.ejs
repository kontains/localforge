<!-- UI Appearance Settings Tab -->
<div class="settings-tab-content" id="ui-tab" style="visibility:hidden; position:absolute; z-index:-1">
    <div class="content-scroll-area">
        <div class="settings-section compact">
            <div class="model-row-label section-title">Appearance Settings</div>
            <div class="settings-note">
                <div class="note-icon"><span class="material-icons">info</span></div>
                <div class="note-text">Customize the appearance of the application.</div>
            </div>
            
            <!-- Theme Settings -->
            <div class="model-row compact">
                <div class="model-row-label">Theme</div>
                <div class="settings-form-group compact">
                    <label for="theme-select">Color Theme</label>
                    <select id="theme-select">
                        <option value="dark">Dark Theme</option>
                        <option value="light">Light Theme</option>
                        <option value="caramel-latte">Caramel Latte</option>
                        <option value="dark-coffee">Dark Coffee</option>
                    </select>
                </div>
            </div>
            
        </div>
    </div>
</div>