<div class="settings-tab-content" id="models-tab" style="visibility:visible; position:relative; z-index:1">
    <div class="content-scroll-area">
        <!-- Provider Types Section -->
        <div class="settings-section compact">
            <div class="model-row-label section-title">Available Provider Types</div>
            <div class="provider-types-list">
                <span class="provider-type-badge">openai</span>
                <span class="provider-type-badge">gemini</span>
                <span class="provider-type-badge">anthropic</span>
                <span class="provider-type-badge">ollama</span>
                <span class="provider-type-badge">bedrock</span>
                <span class="provider-type-badge">vertex.ai</span>
            </div>
            <div class="settings-note">
                <div class="note-icon"><span class="material-icons">info</span></div>
                <div class="note-text">Recommended setup: o3 or gemini 2.5 for expert, gpt-4.1 for main, and gpt-4.1-mini for aux)</div>
            </div>
        </div>
        
        <!-- Providers Configuration Section -->
        <div class="settings-section compact">
            <div class="section-header">
                <div class="model-row-label section-title">Your Provider List</div>
                <button class="btn secondary add-provider-btn">
                    <span class="material-icons">add</span> Add
                </button>
            </div>
            
            <div class="providers-list-wrapper">
                <div class="providers-list">
                    <!-- Example provider -->
                    <div class="provider-item">
                        <div class="provider-header">
                            <span class="provider-name">OpenAI Default</span>
                            <div class="provider-info">
                                <span class="provider-type-label">openai</span>
                            </div>
                            <div class="provider-actions">
                                <button class="mini-button edit-provider" title="Edit"><span class="material-icons">edit</span></button>
                                <button class="mini-button delete-provider" title="Delete"><span class="material-icons">delete</span></button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Example provider 2 -->
                    <div class="provider-item">
                        <div class="provider-header">
                            <span class="provider-name">Gemini Pro</span>
                            <div class="provider-info">
                                <span class="provider-type-label">gemini</span>
                            </div>
                            <div class="provider-actions">
                                <button class="mini-button edit-provider" title="Edit"><span class="material-icons">edit</span></button>
                                <button class="mini-button delete-provider" title="Delete"><span class="material-icons">delete</span></button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Add more example providers if needed -->
                    <div class="provider-item">
                        <div class="provider-header">
                            <span class="provider-name">Ollama Local</span>
                            <div class="provider-info">
                                <span class="provider-type-label">openai</span>
                            </div>
                            <div class="provider-actions">
                                <button class="mini-button edit-provider" title="Edit"><span class="material-icons">edit</span></button>
                                <button class="mini-button delete-provider" title="Delete"><span class="material-icons">delete</span></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- LLM Configurations Section -->
        <div class="settings-section compact">
            <div class="model-row-label section-title">LLM Configurations</div>
            
            <div class="llm-configs-grid">
                <!-- Aux Model -->
                <div class="llm-config-card">
                    <div class="llm-config-header">Aux Model</div>
                    <div class="llm-config-body">
                        <div class="settings-form-group compact">
                            <select id="auxModelProvider" title="Provider">
                                <option value="">Select Provider</option>
                                <option value="openai-default">OpenAI Default</option>
                                <option value="gemini-pro">Gemini Pro</option>
                            </select>
                        </div>
                        <div class="settings-form-group compact">
                            <input type="text" id="auxModelName" placeholder="Model name (e.g. gpt-3.5)" />
                        </div>
                    </div>
                </div>
                
                <!-- Main Model -->
                <div class="llm-config-card">
                    <div class="llm-config-header">Main Model</div>
                    <div class="llm-config-body">
                        <div class="settings-form-group compact">
                            <select id="mainModelProvider" title="Provider">
                                <option value="">Select Provider</option>
                                <option value="openai-default">OpenAI Default</option>
                                <option value="gemini-pro">Gemini Pro</option>
                            </select>
                        </div>
                        <div class="settings-form-group compact">
                            <input type="text" id="mainModelName" placeholder="Model name (e.g. gpt-4)" />
                        </div>
                    </div>
                </div>
                
                <!-- Expert Model -->
                <div class="llm-config-card">
                    <div class="llm-config-header">Expert Model</div>
                    <div class="llm-config-body">
                        <div class="settings-form-group compact">
                            <select id="expertModelProvider" title="Provider">
                                <option value="">Select Provider</option>
                                <option value="openai-default">OpenAI Default</option>
                                <option value="gemini-pro">Gemini Pro</option>
                            </select>
                        </div>
                        <div class="settings-form-group compact">
                            <input type="text" id="expertModelName" placeholder="Model name (e.g. claude-3)" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Provider Edit Modal (hidden initially, would be shown when editing a provider) -->
<div id="provider-edit-modal" class="modal">
    <div class="modal-content provider-edit-modal-content">
        <h3>
            <span class="material-icons">settings</span>
            <span id="provider-edit-title">Edit Provider</span>
        </h3>
        
        <div class="provider-edit-form">
            <div class="settings-form-group">
                <label for="providerName">Provider Name</label>
                <input type="text" id="providerName" placeholder="e.g. My OpenAI Provider" />
            </div>
            
            <div class="settings-form-group">
                <label for="providerType">Provider Type</label>
                <select id="providerType">
                    <option value="openai">openai</option>
                    <option value="gemini">gemini</option>
                    <option value="anthropic">anthropic</option>
                    <option value="ollama">ollama</option>
                    <option value="bedrock">bedrock</option>
                    <option value="vertex.ai">vertex.ai</option>
                </select>
            </div>
            
            <div class="settings-form-group">
                <label for="providerApiKey">API Key</label>
                <div class="key-input-wrapper">
                    <input type="password" id="providerApiKey" placeholder="Enter API key" />
                    <button type="button" class="toggle-password" title="Toggle password visibility">
                        <span class="material-icons">visibility_off</span>
                    </button>
                </div>
            </div>
            
            <div class="settings-form-group">
                <label for="providerApiUrl">API URL (Optional)</label>
                <input type="text" id="providerApiUrl" placeholder="Custom endpoint URL (if needed)" />
            </div>
        </div>
        
        <div class="modal-footer">
            <button type="button" id="provider-edit-cancel" class="btn secondary">Cancel</button>
            <button type="button" id="provider-edit-save" class="btn primary">Save Provider</button>
        </div>
    </div>
</div>