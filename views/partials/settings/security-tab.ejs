<div class="settings-tab-content" id="security-tab" style="visibility:hidden; position:absolute; z-index:-1">
    <div class="content-scroll-area">
        <div class="settings-section">
            <h3>Security Settings</h3>
            <div class="settings-form-group checkbox-group">
                <label for="enableCommandExecution">
                    <div class="checkbox-container">
                        <input type="checkbox" id="enableCommandExecution" checked>
                        <span class="custom-checkbox"></span>
                    </div>
                    <span>Allow command execution</span>
                </label>
            </div>
            
            <div class="settings-form-group checkbox-group">
                <label for="restrictFilesystem">
                    <div class="checkbox-container">
                        <input type="checkbox" id="restrictFilesystem">
                        <span class="custom-checkbox"></span>
                    </div>
                    <span>Restrict filesystem access to working directory</span>
                </label>
            </div>
            
            <div class="settings-form-group checkbox-group">
                <label for="enableWebAccess">
                    <div class="checkbox-container">
                        <input type="checkbox" id="enableWebAccess" checked>
                        <span class="custom-checkbox"></span>
                    </div>
                    <span>Allow web access</span>
                </label>
            </div>
        </div>
    </div>
</div>